<main class="main">
	{{#with data}}
	<div class="main__content">
		<h1 class="title title--center">Додати до плейліста</h1>

		<ul class="track__list content--light">
			{{#each tracks}}
			<li class="track">
				<img src="{{image}}" alt="{{name}}">
				<div class="track__content">
					<strong class="track__name">{{name}}</strong>
					<em class="track__author">{{author}}</em>
				</div>
				<a href="/spotify-playlist-add-track?playlistId={{../playlistId}}&trackId={{id}}">
					<img src="/svg/add_circle.svg" alt="">
				</a>
			</li>
			{{/each}}
		</ul>
	</div>
	{{/with}}
</main>