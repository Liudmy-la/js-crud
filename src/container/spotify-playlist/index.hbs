<main class="main">
	{{#with data}}
	<div class="main__content">
		<h1 class="title title--center">{{name}}</h1>

		<a href="/spotify-playlist-add?playlistId={{playlistId}}" class="action-button">
			<img src="/svg/add_button-thin.svg" alt="" class="action_button--colored">
			Додати до плейліста
		</a>

		<ul class="track__list">
			{{#each tracks}}
			<li class="track">
				<img src="{{image}}" alt="{{name}}">
				<div class="track__content">
					<strong class="track__name">{{name}}</strong>
					<em class="track__author">{{author}}</em>
				</div>
				<a href="/spotify-track-delete?playlistId={{../playlistId}}&trackId={{id}}">
					<img src="/svg/delete_button.svg" alt="">
				</a>
			</li>
			{{/each}}
		</ul>
	</div>
	{{/with}}
</main>